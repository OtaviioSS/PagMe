        android:allowBackup="true"
        android:icon="@mipmap/ic_logo_ultimate_foreground"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_logo_ultimate_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Pagme"
        >
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_channel_id"
            android:value="@string/channel_id" />
        <activity
            android:name=".presentation.activities.ListCardActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.activities.VerifiedActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.activities.ForgetPasswordActivity"
            android:exported="false">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".presentation.activities.EditFormDebtActivity"
            android:exported="false">
