<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.activities.LoginActivity">


    <View
        android:id="@+id/imageLogoLoginView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/view_logo_login"
        android:elevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewTitleLoginActivity"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:text="Login"
        android:textColor="#ffffff"
        android:textSize="38sp"
        app:layout_constraintBottom_toTopOf="@id/textFieldEmailLoginView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageLogoLoginView" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textFieldEmailLoginView"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/email"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/textFieldPasswordLoginView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewTitleLoginActivity">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/emailLoginView"
            style="@style/ThemeOverlay.Material3.TextInputEditText.OutlinedBox"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:inputType="textEmailAddress"
            android:padding="8dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textFieldPasswordLoginView"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/senha"
        android:textStyle="bold"
        app:endIconMode="password_toggle"
        app:layout_constraintBottom_toTopOf="@id/textViewForgetPasswordLoginView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textFieldEmailLoginView">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/passwordLoginView"
            style="@style/ThemeOverlay.Material3.TextInputEditText.OutlinedBox"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:padding="8dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/textViewForgetPasswordLoginView"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:text="Esqueci minha senha"
        app:layout_constraintBottom_toTopOf="@id/buttonSaveLoginView"
        app:layout_constraintEnd_toEndOf="@id/textFieldPasswordLoginView"
        app:layout_constraintTop_toBottomOf="@id/textFieldPasswordLoginView" />

    <Button
        android:id="@+id/buttonSaveLoginView"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/button_primary_background"
        android:text="@string/entrar"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/toggleButtonSocial"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewForgetPasswordLoginView" />

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/toggleButtonSocial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/textCreateNewUser"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonSaveLoginView">

        <Button
            android:id="@+id/buttonGoogleLogin"
            style="@style/Widget.Material3.Button.IconButton.Outlined"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:textAlignment="center"
            app:icon="@drawable/ic_google_24" />


    </com.google.android.material.button.MaterialButtonToggleGroup>

    <LinearLayout
        android:id="@+id/textCreateNewUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toggleButtonSocial">

        <TextView
            android:id="@+id/textViewNaoTemConta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/n_o_tem_conta"
            android:textSize="14sp" />


        <Button
            android:id="@+id/textRegisterLoginView"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/criar_conta"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>