<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.activities.VerifiedActivity">
    <TextView
        android:id="@+id/titleVerifiedView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verificação de email"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@id/imageVerifiedView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageVerifiedView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:contentDescription="@string/ilustra_o_de_verifica_o_de_email"
        android:padding="16sp"
        android:src="@drawable/undraw_mailbox_re_dvds"
        app:layout_constraintBottom_toTopOf="@id/textVerifiedView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleVerifiedView" />

    <TextView
        android:id="@+id/textVerifiedView"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Um email com link para verificação de conta foi enviado para seu email, verifique sua caixa de entrada e seu spam."
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/loginButtonVerifiedView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageVerifiedView" />

    <Button
        android:id="@+id/loginButtonVerifiedView"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_primary_background"
        android:text="Entrar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textVerifiedView" />
</androidx.constraintlayout.widget.ConstraintLayout>